<div class="row">
    <div class="col-md-6 mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" value="<%= item.username || oldInput.username || '' %>" required>
    </div>
    <div class="col-md-6 mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= item.email || oldInput.email || '' %>" required>
    </div>
</div>

<div class="mb-3">
    <label for="role" class="form-label">Role</label>
    <select name="role" id="role" class="form-select" required>
        <option value="user" <%= (item.role === 'user' || oldInput.role === 'user') ? 'selected' : '' %>>User</option>
        <option value="admin" <%= (item.role === 'admin' || oldInput.role === 'admin') ? 'selected' : '' %>>Admin</option>
    </select>
</div>

<hr>

<p class="text-muted"><%= item.id ? 'Kosongkan field password jika tidak ingin mengubahnya.' : 'Password wajib diisi untuk user baru.' %></p>
<div class="row">
    <div class="col-md-6 mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" <%= !item.id ? 'required' : '' %>>
    </div>
    <div class="col-md-6 mb-3">
        <label for="password_confirmation" class="form-label">Konfirmasi Password</label>
        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control" <%= !item.id ? 'required' : '' %>>
    </div>
</div>